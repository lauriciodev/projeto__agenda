<%- include ("includes/head")%>
<%- include ("includes/nav")%>

<div class="container">
  <div class="row">
    <div class="col-lg-10 my-4 mx-auto">
      <h1 class="text-center">Agenda</h1>
      <%if(contatos.length > 0) {%>
      <p class="text-center lead">Seus contatos est√£o listados abaixo</p>
      <%- include ("includes/messages")%>
      <div class="responsive-table">
        <table class="table mt-5">
          <%contatos.forEach(contato => {%>
            <tr>
              <td><%= contato.nome%></td>
              <td><%= contato.sobrenome%></td>
              <td><%= contato.telefone%></td>
              <td><%= contato.email%></td>
              <td>
                <a class="btn btn-warning" href="/contato/index/<%=contato._id%>">Editar</a>
              </td>
              <td>
                <a class="btn btn-danger" href="/contato/delete/<%=contato._id%>">Deletar</a>
              </td>
            </tr>
          <%})%>
        </table>
        <%}else{%>
        <p class="text-center lead">nenhum contato encontrado.</p>
        <%}%>
      </div>
    </div>
  </div>
</div>
<%- include ("includes/footer")%>